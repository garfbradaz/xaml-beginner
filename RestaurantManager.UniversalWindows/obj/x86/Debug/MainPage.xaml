<Page
    x:Class="RestaurantManager.UniversalWindows.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RestaurantManager.UniversalWindows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*" />
            <RowDefinition Height="0.1*" />
            <RowDefinition Height="0.5*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <TextBlock x:ConnectionId='1' x:Name="Title" Text="Restaurant Manager" 
                   TextAlignment="Center"                
                   Grid.ColumnSpan="2" VerticalAlignment="Bottom" 
                   FontSize="50"/>
        <TextBlock x:ConnectionId='2' x:Name="SubTitle" Text="Internal Test Version" 
                   TextAlignment="Center"
                   Grid.Row="1"
                   Grid.ColumnSpan="2" VerticalAlignment="Bottom"
                   FontSize="24"/>      
        <!--The following we will change to a button at a later date-->
        <TextBlock x:ConnectionId='3' x:Name="buttonGotoOrders" Text="*Go to Orders View*" 
                   TextAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="2" />
        <TextBlock x:ConnectionId='4' x:Name="buttonSubmitOrder" Text="*Submit Order*" 
                   TextAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Column="1"
                   Grid.Row="2"/>
                   
    </Grid>
</Page>

